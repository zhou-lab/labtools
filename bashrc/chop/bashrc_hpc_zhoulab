# lazy git
function gl {
  if [ -z "$1" ]; then message="minor, message omitted"; else message="$1"; fi;
  git commit -a -m "$message";
  git push;
}

sortbed ()
{
    LC_ALL=C sort -k1,1 -k2,2n -T . $1
}
