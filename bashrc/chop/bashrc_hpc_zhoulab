function qstatz() {
  qstat | awk -F" " '$0~/@/ && NR==FNR{match($0,/@([^.]*)/,a); jobids[a[1]]=gensub(/[ ]+/,"|","g",$0);}NR==FNR&&FNR==1{jobids["HOSTNAME"]=gensub(/[ ]+/,"|","g",$0);}NR!=FNR && ($1 in jobids || FNR==1){split($0,a,/[ ]+/); print a[1]"\t"a[3]"|"a[4]"|"a[5]"|"a[6]"\t\033[1;31m"a[7]"\t"a[8]"|"a[9]"\033[0m\t"a[10]"|"a[11]"\t"jobids[$1];}' - <(/cm/shared/apps/uge/8.6.6/bin/lx-amd64/qhost)
}
